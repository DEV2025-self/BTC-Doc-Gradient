<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:fitsSystemWindows="true"
        tools:context=".BDG_Activity.OptixZonePanel">

        <RelativeLayout
            android:id="@+id/layToolbarbdg"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <RelativeLayout
                android:id="@+id/btnbackbdg"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/btnbackbg10_bg">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="12dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_back" />
            </RelativeLayout>


            <TextView
                android:id="@+id/titlebdg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/inter_medium_500"
                android:gravity="center_horizontal"
                android:text="Setting"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bannerAdViewbdg"
            android:layout_below="@+id/layToolbarbdg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp">

                <RelativeLayout
                    android:id="@+id/profilebdg"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="26dp"
                    android:background="@drawable/drawerradius10_bg">

                    <RelativeLayout
                        android:id="@+id/aa"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12sp"
                        android:background="@drawable/ic_profilebg">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="23dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_user_img" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/aa"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:autoSizeMaxTextSize="15sp"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeTextType="uniform"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/inter_regular_400"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxLines="1"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txtUserEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtUserName"
                            android:layout_gravity="center"
                            android:layout_marginEnd="15dp"
                            android:autoSizeMaxTextSize="12sp"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeTextType="uniform"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/inter_regular_400"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxLines="1"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#304F36"
                            android:textSize="12sp" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnfaqsbdg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/profilebdg"
                    android:layout_marginTop="26dp">

                    <RelativeLayout
                        android:id="@+id/image1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btnbackbg10_bg">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="18dp"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_faq" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/image1"
                        android:fontFamily="@font/inter_medium_500"
                        android:includeFontPadding="false"
                        android:text="FAQs"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_next" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="12sp"
                        android:layout_toEndOf="@+id/image1"
                        android:background="@color/line" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnPrivacyPolicybdg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/btnfaqsbdg"
                    android:layout_marginTop="11dp">

                    <RelativeLayout
                        android:id="@+id/image2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btnbackbg10_bg">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_policy" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/image2"
                        android:fontFamily="@font/inter_medium_500"
                        android:includeFontPadding="false"
                        android:text="Privacy Policy"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_next" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="12sp"
                        android:layout_toEndOf="@+id/image2"
                        android:background="@color/line" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnShareAppbdg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/btnPrivacyPolicybdg"
                    android:layout_marginTop="11dp">

                    <RelativeLayout
                        android:id="@+id/image3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btnbackbg10_bg">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_shareapp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/image3"
                        android:fontFamily="@font/inter_medium_500"
                        android:includeFontPadding="false"
                        android:text="Share App"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_next" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="12sp"
                        android:layout_toEndOf="@+id/image3"
                        android:background="@color/line" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnSRateAppbdg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/btnShareAppbdg"
                    android:layout_marginTop="11dp">

                    <RelativeLayout
                        android:id="@+id/image4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btnbackbg10_bg">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="17dp"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_rate" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/image4"
                        android:fontFamily="@font/inter_medium_500"
                        android:includeFontPadding="false"
                        android:text="Rate App"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_next" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="12sp"
                        android:layout_toEndOf="@+id/image4"
                        android:background="@color/line" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnDeleteAccountbdg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/btnSRateAppbdg"
                    android:layout_marginTop="11dp">

                    <RelativeLayout
                        android:id="@+id/image5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btnbackbg10_bg">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_delete_account" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/image5"
                        android:fontFamily="@font/inter_medium_500"
                        android:includeFontPadding="false"
                        android:text="Delete Account"
                        android:textColor="@color/red"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_next_red" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="12sp"
                        android:layout_toEndOf="@+id/image5"
                        android:background="@color/line" />
                </RelativeLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@+id/bannerAdViewbdg"
            layout="@layout/ads_banner_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="visible" />

    </RelativeLayout>

</layout>