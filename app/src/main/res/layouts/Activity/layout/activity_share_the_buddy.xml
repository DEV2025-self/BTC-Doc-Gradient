<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:fitsSystemWindows="true"
        tools:context=".BDG_Activity.ShareTheBuddy">

        <RelativeLayout
            android:id="@+id/layToolbarbdg"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <RelativeLayout
                android:id="@+id/btnbackbdg"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/btnbackbg10_bg">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="12dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_back" />
            </RelativeLayout>


            <TextView
                android:id="@+id/titlebdg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/inter_medium_500"
                android:gravity="center_horizontal"
                android:text="Refer Friend"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/btnhistorybdg"
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_history" />

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bannerAdViewbdg"
            android:layout_below="@+id/layToolbarbdg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="25dp"
                    android:fontFamily="@font/inter_semibold_600"
                    android:includeFontPadding="false"
                    android:text="Earn BTC By Refer"
                    android:textColor="@color/app_color"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/refertext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="4dp"
                    android:autoSizeMaxTextSize="13sp"
                    android:autoSizeMinTextSize="7sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/inter_regular_400"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="2dp"
                    android:text="You and your friend will get ** free BTC when your friends join BTC mining Community"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/imgbdg"
                    android:layout_width="180dp"
                    android:layout_height="124dp"
                    android:layout_below="@+id/refertext1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/refer_img" />

                <RelativeLayout
                    android:id="@+id/lay4"
                    android:layout_width="250dp"
                    android:layout_height="84dp"
                    android:layout_below="@+id/imgbdg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="55dp"
                    android:background="@drawable/code_bg">

                    <TextView
                        android:id="@+id/refercodetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:autoSizeMaxTextSize="14sp"
                        android:autoSizeMinTextSize="7sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/inter_regular_400"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Your Referral Code"
                        android:textColor="@color/app_color"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/refercodetext"
                        android:layout_marginTop="3dp"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:id="@+id/ictxtYourReferralCodebdg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoSizeMaxTextSize="28sp"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/inter_bold_700"
                            android:maxLines="1"
                            android:includeFontPadding="false"
                            android:text=""
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="28dp" />

                        <ImageView
                            android:id="@+id/iccopybdg"
                            android:layout_width="16dp"
                            android:layout_height="19dp"
                            android:layout_marginStart="12dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/ictxtYourReferralCodebdg"
                            android:src="@drawable/ic_copy" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay4"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="40dp">

                    <TextView
                        android:id="@+id/refertextbdg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:autoSizeMaxTextSize="17sp"
                        android:autoSizeMinTextSize="7sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/inter_medium_500"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:text="Or Share With"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/refertextbdg"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="30dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btnwhatsappbdg"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/refer_whatsapp" />

                        <ImageView
                            android:id="@+id/btninstagrambdg"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/refer_instagram" />

                        <ImageView
                            android:id="@+id/btnFaceBookbdg"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/refer_facebook" />

                        <ImageView
                            android:id="@+id/btntelegrambdg"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/refer_telegram" />

                        <ImageView
                            android:id="@+id/btnSharebdg"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/refer_share" />

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
        <include
            android:id="@+id/bannerAdViewbdg"
            layout="@layout/ads_banner_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="visible" />
    </RelativeLayout>
</layout>