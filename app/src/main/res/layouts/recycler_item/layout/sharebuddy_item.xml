<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginVertical="6dp"
        android:background="@drawable/boxradius10_bg">

        <RelativeLayout
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/ReferralPositionbdg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/inter_medium_500"
                android:includeFontPadding="false"
                android:text="1."
                android:textColor="@color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/ReferralPositionbdg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ReferralNamebdg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/inter_medium_500"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="bhargav"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ReferralGmailbdg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="14sp"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/inter_regular_400"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="bhargav@gmail.com"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/Referralpointbdg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:autoSizeMaxTextSize="14sp"
                android:autoSizeMinTextSize="7sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/inter_regular_400"
                android:gravity="center"
                android:includeFontPadding="false"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:maxLines="1"
                android:text="+000.00000000"
                android:textColor="@color/app_color"
                android:textSize="14sp" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>