<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_color">

    <RelativeLayout
        android:id="@+id/mainlay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:gravity="start|center">

            <RelativeLayout
                android:id="@+id/layRelative"
                android:layout_width="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/globalNumberbdg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/inter_medium_500"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imgForGlobal"
                android:layout_width="20dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:src="@drawable/a_one"
                android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/globalNamebdg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/layRelative"
                android:fontFamily="@font/inter_medium_500"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/globalPointsbdg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="7sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/inter_regular_400"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/app_color"
                android:textSize="15sp" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/mainlay"
        android:background="#282828" />

</RelativeLayout>