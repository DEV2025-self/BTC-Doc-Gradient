<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <Switch
        android:id="@+id/facebookAds"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="faceBook Ads"
        android:textAlignment="center"
        android:thumb="@drawable/ads_custom_switch"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        tools:targetApi="ice_cream_sandwich" />

    <Switch
        android:id="@+id/GoogleAds"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebookAds"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Google Ads"
        android:textAlignment="center"
        android:thumb="@drawable/ads_custom_switch"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        tools:targetApi="ice_cream_sandwich" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GoogleAds"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@color/black"
        android:text="Next"
        android:textColor="@color/white" />

</RelativeLayout>