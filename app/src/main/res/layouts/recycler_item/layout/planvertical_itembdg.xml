<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainRelative"
    android:layout_width="match_parent"
    android:layout_height="143dp"
    android:layout_marginVertical="8dp"
    android:background="@color/transparent_color">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:background="@drawable/boxradius10_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="68dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/plan_gradientimg" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/boosterimgbdg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/smallredisuImageview" />

        <RelativeLayout
            android:id="@+id/linearSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txtgreenOrignalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter_bold_700"
                android:includeFontPadding="false"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/app_color"
                android:textSize="24sp" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layOfferText"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtgreenOrignalPrice"
                android:layout_centerHorizontal="true"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txtwhiteOrignalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/inter_medium_500"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="-4dp"
                    android:layout_marginEnd="-4dp"
                    android:src="@drawable/ic_red_line"
                    app:layout_constraintBottom_toBottomOf="@+id/txtwhiteOrignalPrice"
                    app:layout_constraintEnd_toEndOf="@+id/txtwhiteOrignalPrice"
                    app:layout_constraintStart_toStartOf="@+id/txtwhiteOrignalPrice"
                    app:layout_constraintTop_toTopOf="@+id/txtwhiteOrignalPrice" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/layOfferTag"
        android:layout_width="130dp"
        android:layout_height="6dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:src="@drawable/offer_lay1"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/laytextOfferTag"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:background="@drawable/offer_lay2"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/txtOfferbdg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="13sp"
                android:autoSizeMinTextSize="5sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/inter_semibold_600"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btnboosterbdg"
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="12sp"
        android:background="@drawable/allbtnradius100_bg"
        android:visibility="visible">

        <TextView
            android:id="@+id/txtPlanNamebdg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/inter_semibold_600"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>