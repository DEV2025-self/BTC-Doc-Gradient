<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.BTCDocGradient" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your light theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BTCDocGradient" parent="Base.Theme.BTCDocGradient" />


    <style name="RoundedProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_progress_dialog</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="PurchaseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_purchase_pol</item>
        <item name="android:windowExitAnimation">@anim/fade_out_purchase_pol</item>
    </style>

    <style name="smallredisuImageview" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>
    <style name="bigradiusimgview" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">9dp</item>
    </style>
</resources>